    "version": "0.2.0",
    "configurations": [
        {
            "name": "RobotMK check",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/checks/robotmk",
            "console": "integratedTerminal",
            "pythonPath": "${workspaceFolder}/.tox/check/bin/python",
            // allow to inspect also foreign code
            "justMyCode": false
        },
        {
            "name": "RobotMK plugin",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/agents/plugins/robotmk",
            "console": "integratedTerminal",
            "pythonPath": "${workspaceFolder}/.tox/plugin/bin/python",
            // allow to inspect also foreign code
            "justMyCode": false
        },
        {
            "name": "RobotMK plugin WIN",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/agents/plugins/robotmk",
            "args": [
                "--debug"
            ],
            "console": "integratedTerminal",
            //"pythonPath": "c:/python38/python",
            // allow to inspect also foreign code
            "justMyCode": false
        },           
    ]
}